SUPER_ADMIN_PASSWORD=SuAdmin@123
SUPER_ADMIN_MASTER_KEY=your-super-secret-master-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100